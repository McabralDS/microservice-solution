{
  "name": "microservice-solution",
  "version": "1.0.0",
  "description": "A TypeScript microservice solution",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/McabralDS/microservice-solution.git"
  },
  "keywords": [
    "typescript",
    "microservice",
    "nodejs"
  ],
  "author": "Mateus Cabral dos Santos",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "zod": "^3.22.4",
    "lodash": "^4.17.21",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "typescript": "^4.5.4",
    "vitest": "^1.0.4",
    "@types/node": "^16.11.7",
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.202",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "prettier": "^3.2.2"
  }
}